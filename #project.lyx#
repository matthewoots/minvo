\begin_layout Plain Layout

\series bold
Problem 
\series default
4:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\max_{\boldsymbol{A}}\quad\left|\boldsymbol{A}\right|
\]

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
s.t:
\]

\end_inset


\end_layout

\begin_layout Plain Layout

\series bold
\bar under
If 
\begin_inset Formula $n$
\end_inset

 is odd:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\begin{array}{c}
\lambda_{i}(t)=-b_{i}(t-1)\stackrel[j=1]{\frac{n-1}{2}}{\prod}(t-t_{j})^{2}\quad i=1,3,...,n\\
\lambda_{i}(t)=\lambda_{n-i+2}(-t)\quad\quad\quad i=2,4,...,n+1\\
b_{i}\ge0\quad i=1,3,...,n\\
\sum_{i}\lambda_{i}(t)=1
\end{array}
\]

\end_inset


\end_layout

\begin_layout Plain Layout

\series bold
\bar under
If 
\begin_inset Formula $n$
\end_inset

 is even:
\series default
\bar default
 define 
\begin_inset Formula $\mathcal{I}_{a}:=2,4,..,\frac{n}{2}$
\end_inset

 and 
\begin_inset Formula $\mathcal{I}_{b}:=1,3,..\frac{n}{2}$
\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\begin{array}{c}
\lambda_{i}(t)=-b_{i}(t+1)(t-1)\stackrel[j=1]{\frac{n-2}{2}}{\prod}(t-t_{j})^{2}\quad i\in\mathcal{I}_{a}\\
\lambda_{i}(t)=b_{i}\stackrel[j=1]{\frac{n}{2}}{\prod}(t-t_{j})^{2}\quad\quad\quad i\in\mathcal{I}_{b}\\
\lambda_{j}(t)=\lambda_{n-i+1}(-t)\quad\quad\quad i=\frac{n}{2}+2,...,n+1\\
b_{i}\ge0\quad i\le\frac{n}{2}+1\\
\sum_{i}\lambda_{i}(t)=1
\end{array}
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $\frac{n}{2}$
\end_inset

 is odd (
\begin_inset Formula $n=2,6,10...)$
\end_inset

, add this constraint:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\lambda_{i}(t)=-b_{i}(t+1)(t-1)\stackrel[j=1]{\frac{n-2}{4}}{\prod}(t-t_{j})^{2}(t+t_{j})^{2}\quad\quad i=\frac{n}{2}+1
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $\frac{n}{2}$
\end_inset

 is even (
\begin_inset Formula $n=4,8,12...)$
\end_inset

, add this constraint:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\lambda_{i}(t)=b_{i}\stackrel[j=1]{\frac{n}{4}}{\prod}(t-t_{j})^{2}(t+t_{j})^{2}\quad\quad i=\frac{n}{2}+1
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Note Note
status open

\begin_layout Itemize
If 
\begin_inset Formula $\frac{n}{2}$
\end_inset

 is odd (
\begin_inset Formula $n=2,6,10...)$
\end_inset

, define 
